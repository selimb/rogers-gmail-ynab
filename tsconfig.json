{
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts",
    "eslint.config.js",
    "rollup.config.js"
  ],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    // GAS runtime doesn't support latest features.
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "target": "ES2016",

    // Output
    "noEmit": true,

    // Vanilla JS
    "checkJs": true,
    "allowJs": true,

    // Module
    // https://www.totaltypescript.com/tsconfig-cheat-sheet#not-transpiling-with-typescript
    "module": "preserve",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "verbatimModuleSyntax": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true
  }
}
